{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types", "src/data/express.d.ts"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "include": ["./**/*.ts"],
  "exclude": ["node_modules","./coverage", "./dist", "__tests__", "jest.config.js", "**/*.spec.ts"],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
}
